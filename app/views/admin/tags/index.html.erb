<div class="adm-title">
  <h1>Tags</h1>
</div>
<table border="0" cellspacing="0" cellpadding="0" width="100%">
  <tr>
    <th class="name">Name</th>
    <th class="tag_count">Tag Count</th>
    <th class="actions border-right">Actions</th>
  </tr>
  <% @tags.each do |tag| %>
    <tr>
      <td><%= tag.name %></td>
      <td><%= tag.count %></td>
      <td>
        <%= link_to 'Delete', admin_tag_path(tag), :method => :delete %></td>
      </td>
    </tr>
  <% end %>
</table>
