<div class="adm-title">
  <h1>Topics</h1>
  <%= link_to 'New Topic', new_admin_topic_path %>
</div>
<table border="0" cellspacing="0" cellpadding="0" width="100%">
  <tr>
    <th class="created_at border-left">Created at</th>
    <th class="updated_at">Updated at</th>
    <th class="title">Title</th>
    <th class="user">User</th>
    <th class="related_content">Related Content</th>
    <th class="profile_matches">Profile Matches</th>
    <th class="edit">Edit</th>
    <th class="delete border-right">Delete</th>
  </tr>
  <% @topics.each do |topic| %>
    <tr>
      <td><%= l topic.created_at, :format => :short %></td
      <td><%= l topic.updated_at, :format => :short %></td>
      <td><%= link_to topic.title, topic %></td>
      <td><%= topic.user.username %></td>
      <td><%= link_to 'Related Content', admin_topic_related_contents_path(topic) %></td>
      <td><%= link_to 'Profile Matches', admin_topic_profile_matches_path(topic) %></td>
      <td><%= link_to 'Edit', edit_admin_topic_path(topic) %></td>
      <td><%= link_to 'Delete', admin_topic_path(topic), :method => :delete, :confirm => "Are you sure?" %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate(@topics) %>


