<h2 class="regular"><%= t('users.show.content.private_messages.title') %>
  <%= link_to '#inbox', :class => "border-all back-to-msgs" do %>
    <span class="arrow"></span>
    <span><%= t('users.show.content.private_messages.back_to_msgs') %></span>
  <% end %>
</h2>
<div class="pm-details">
  <%= render :partial => 'reply', :object => message %>
</div>
<div class="replies-wrapper <% 'pm-details' unless message.replies.blank? %>">
  <%= render :partial => 'reply', :collection => message.replies %>
</div>
<div class="new-response response-wrapper">
  <% if defined?(replying) && replying %>
    <%= form_for PrivateMessage.new, :url => url_for_message_reply(message), :remote => true, :html => { :id => "reply-form" } do |f| %>
      <%= hidden_field_tag :reply_to, message.id %>
      <div class="border-all"><%= f.text_area :content, :class => 'border-all', :rows => '1', :cols => '78', :value => 'Click here to add a reply' %></div>
      <%= f.submit t('.reply'), :class => 'btn-gradient' %>
    <% end %>
  <% else %>
    <div>
      <a href="#"><%= t('users.show.content.private_messages.add_reply') %></a>
    </div>
  <% end %>
</div>
