<h2 class="regular pm-panel-padding"><%= t('users.show.content.private_messages.title') %></h2>
<% unless inbox.empty? %>
  <ul class="messages">
    <% inbox.each_with_index do |pm, i| %>
      <%= content_tag_for :li, pm, :class => ('new' if pm.conversation.unread_by?(current_user)), :style => "z-index: #{inbox.length - i}" do %>
        <div class="avatar-wrapper">
          <%= avatar_span(pm.conversation_replies.last.sender, pm.conversation_replies.last.sender.is_expert?, true) %>
          <%= render :partial => 'users/card', :locals => {:user => pm.conversation_replies.last.sender} %>
        </div>
        <ul class="msg-opts border-bottom">
          <li><%= link_to t('users.show.content.private_messages.delete'), private_message_path(pm), :class => "opt-delete", :method => :delete, :confirm => t('users.show.content.private_messages.confirm_delete'), :remote => true %></li>          
          <li><%= link_to t('users.show.content.private_messages.reply'), inbox_user_path({:anchor => {:m => pm.id, :reply => true}}), :class => "opt-reply", :'data-value' => pm.id %></li>
        </ul>
        <div class="from">
          <%= link_to  inbox_user_path({:anchor => {:m => pm.id}}), :'data-value' => pm.id do %> 
              <span class="display-pm"><%= t('users.show.content.private_messages.by', :sender => pm.conversation_replies.last.sender.username) %></span>
              <span><%= t 'users.show.content.private_messages.at_date', :date => l(pm.conversation_replies.last.created_at, :format => :long) %></span>
          <% end %>
        </div>
        <div class="msg">
          <%= link_to inbox_user_path({:anchor => {:m => pm.id}}), :'data-value' => pm.id do %>
            <p><%= truncate pm.conversation_replies.last.content, :length => 125 %></p>
          <% end %>
        </div>
        <br class="clear">
      <% end %>
    <% end %>
  </ul>
    <% if inbox.length > 10 %>
      <div class="bar border-all"> 
        <%= will_paginate inbox, :renderer => PrivateMessagesPaginationRenderer %>
      </div>
    <% end %>
<% else %>
  <h3 class="pm-panel-padding"><%= t('.no_messages') %></h3>
  <p class="pm-panel-padding"><%= t '.empty_tip' %></p>
<% end %>
