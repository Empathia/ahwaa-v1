<!DOCTYPE html>
<html>
<head>
  <title>Lgbt</title>
  <%= javascript_include_tag :defaults, 'form_validator', :cache => true%>
  <%= stylesheet_link_tag 'reset', 'fonts', 'style' %>
  <%= csrf_meta_tag %>
  <%= yield(:head) %>
  <!--[if lt IE 9]>
    <%= javascript_include_tag 'html5_ie' %>
  <![endif]-->
</head>
<body>
  <div style="position: absolute; left: 0; top: 0">
  <%= link_to 'en', :locale => 'en'  %>
  <%= link_to 'ar', :locale => 'ar'  %>
  </div>
  <% flash.each do |key, msg| %>
    <div class="flash <%= key %>"><%= msg %></div>
  <% end %>          
      <header>                  
        <div class="rainbow"></div>        
        <div class="gray <%= current_page?(root_path) ? 'light' : 'dark' %>"></div>
        <div class="aligned">
          <div class="header-top <%= current_page?(root_path) ? 'homepage' : 'topic' %>">
            <div class="links">  
              <% if !current_page?(root_path) %>
                <div><%= link_to 'TRANSCEND', '#', :class => 'lgbt' %></div>
              <% end %>
              <div><%= link_to 'ﺔﻴﺑﺮﻌﻟﺍ ﺔﻐﻠﻟﺎﺑ', '#', :class => 'lan' %></div>
            </div>
            <div class="sign-up">
              <a href="#" id="sign-up" class="border-all">
                <span class="sign-up-btn"><%= t('.header.auth.sign_up') %></span>
              </a>
              <a href="#" id="login">
                <span><%= t('.header.auth.login') %></span>
              </a>
            </div>
            <form action="#" method="post" class="search">
              <p class="border-all">
                <%= text_field :search, nil, :placeholder => t('.header.search_topics'), :value => ""%>
                <span></span>
              </p>
            </form>   
          </div>
        </div>
        <div class="header-wrapper">
          <div class="header-tags aligned">
            <ul>
              <li><%= link_to 'Help' %></li>
              <li><%= link_to 'Movements' %></li>
              <li><%= link_to 'LGBT' %></li>
              <li><%= link_to 'Marriage' %></li>
              <li><%= link_to 'Youth' %></li>
              <li><%= link_to 'Gay Rights' %></li>
              <li><%= link_to 'Transgender' %></li>
              <li class="more">
                <%= link_to 'More' %>
                <ul class="more-tags border-all border-menu">
                  <li><%= link_to 'Lesbian' %></li>
                  <li><%= link_to 'Middle East' %></li>
                  <li><%= link_to 'Africa' %></li>
                  <li><%= link_to 'Friends' %></li>
                </ul>
              </li>
            </ul> 
            <a href="#" class="request-topic disabled">
              <span>
                <span><%= t('.header.request_topic.button')%></span>
              </span>
            </a>
          </div>
        </div>
      </header>
  <div class="container">
    <%= yield %>
  </div>
  <%= form_for User.new, :url => new_user_path, :html => {:class => "over-form sign-up-form"}, :remote => true do |f| %>
    <p><%= t('.header.sign_up_form.legend') %></p>
    <%= f.email_field :email, :required => "true", :placeholder => t('.header.sign_up_form.email') %>
    <%= f.text_field :username, :required => "true", :placeholder => t('.header.sign_up_form.name_nickname') %>
    <p class="legend"><%= t('.header.sign_up_form.note_pt1') %> <%= link_to t('.header.sign_up_form.terms_of_use') %> <%= t('.header.sign_up_form.note_pt2') %> <%= link_to t('.header.sign_up_form.privacy_policy') %> <%=t('.header.sign_up_form.note_pt3')%></p>
    <%= f.submit nil, :class => "auth-submit border-all" %>
  <% end %>
  <%= form_tag login_path, :class => "over-form login-form", :remote => true do %>
    <%= text_field_tag :login, nil, :required => "true", :placeholder => t('.header.login_form.email') %>
    <%= password_field_tag :password, nil, :required => "true", :placeholder => t('.header.login_form.password') %>
    <p class="legend"><%= link_to t('.header.login_form.forgot_password'), '#' %></p>
    <%= submit_tag t('.header.login_form.sign_in'), :class => "auth-submit border-all" %>
  <% end %>
  <div class="request-error">
    <span></span>
    <div>
      <p><%= t('.header.request_topic.legend') %></p>
      <a href="#" class="border-all"><span class="sign-up-btn"><%= t('.header.request_topic.sign_up') %></span></a>
    </div>
  </div>
</body>
</html>
