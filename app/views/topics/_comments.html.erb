  <div class="comments" id="comments_<%= contextual_index %>">
    <ul class="comments-ls">
      <%= render :partial => "replies/reply", :collection => replies, :locals => {:leng => replies.count} %>
    </ul>
    <%= render :partial => "shared/new_response" %>
  </div>
<% end %>
