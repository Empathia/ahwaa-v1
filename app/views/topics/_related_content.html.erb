<% unless related_contents.blank? %>
  <section class="related-content border-all">
    <h2 class="sec-title regular divide" style="border-bottom: 1px solid #e5e5e5"><%= t('.related_content.title') %></h2>
    <div class="arrows">
      <span class="back"><%= t('.related_content.arrows.back') %></span>
    </div>
    <div class="related-carrousel">
      <ul>
        <% related_contents.each do |content| %>
          <li>
            <%= link_to image_tag(content.thumbnail.url, :width => '50'), content.source_url, :target => "_blank", :class => "avatar" %>
            <%= link_to content.title, content.source_url,:target => "_blank" %></li>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="arrows">
      <span class="next"><%= t('.related_content.arrows.next') %></span>
    </div>
  </section>
<% end %>
