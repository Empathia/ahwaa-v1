<li>                                                                                            
  <div class="avatar-wrapper">
    <span class="avatar <%= 'expert' if topic.user.is_expert %>">
      <%= image_tag(topic.user.profile.avatar.url, :width => '56', :height => '56') %>
      <span></span>
    </span>
    <%= render :partial => 'users/card', :locals => {:user => topic.user} %>
  </div>
  <div class="item-data">
    <%= link_to topic.title, topic, :class => 'dark-lk' %>
    <div>            
      <%= t('.popular.by', :author => topic.user.username).html_safe %>
      <ul class="tags">
        <% topic.tags.each do |tag| %>
          <li><%= link_to tag, topic_tag_path(tag.name) %></li>
        <% end %>
      </ul>                                                                         
      <%= link_to pluralize(topic.replies.size, t('.popular.response')), topic, :class => "responses"  %>
    </div>
  </div>
</li>
