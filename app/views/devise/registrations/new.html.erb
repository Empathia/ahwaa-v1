<% javascript 'form_validator'%>
<h2><%= t '.title' %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :username %>
  <%= f.text_field :username, :required => "true", :autocomplete => "off" %></p>

  <p><%= f.label :email %>
  <%= f.email_field :email, :required => "true", :autocomplete => "off" %></p>

  <p><%= f.label :password %>
  <%= f.password_field :password, :required => "true" %></p>

  <p><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, :required => "true" %></p>

  <p><%= f.submit t(".submit") %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
