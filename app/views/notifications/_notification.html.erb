<div class="stream-item interaction-thanks">
  <div class="avatar-wrapper">
    <%= link_to profile_path(notification.sender) do %>
      <%= avatar_span(notification.sender, notification.sender.is_expert?) %>
    <% end %>
    <%= render :partial => 'users/card', :locals => {:user => notification.sender} %>
  </div>
  <div class="stream-item-data">
    <div>
      <span class="user-comment">
        <%= notification.sender.username %>
        <%= notification.title if notification.category == 'thanks' %>
      </span>
      <span class="time-ago">
        <%= t 'helpers.ago', :time => time_ago_in_words(notification.created_at) %>
      </span>

      <br class="clear" />
    </div>
    <% if notification.topic %>
      <p class="title"><%= link_to notification.topic.title, notification.topic %></p>
    <% else %>
      <blockquote><%= notification.title %></blockquote>
    <% end %>
  </div>
  <br class="clear" />
</div>
