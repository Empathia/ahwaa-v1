<li <%= "class='active'" if current_user.profile.avatar == avatar %>>
  <span class="avatar">
    <%= link_to(
      image_tag(avatar.url, :width => "56"),
      set_avatar_user_path(:avatar_id => avatar.id), 
      :remote => true, :format => 'js', :method => :post) 
    %>
  </span>
  <% if current_user.profile.avatar == avatar %>
    <img src="/images/checkmark.png" class="checkmark">
  <% end %>
</li>
