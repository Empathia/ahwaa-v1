<% stylesheet 'index' %>
<% javascript 'include/jquery.overlay', 'index' %>

<div class="aligned">
  <section>
    <hgroup class="slogan">
      <h1><%= t('.title') %></h1>
      <h2><%= t('.legend') %></h2>
    </hgroup>
    <div class="watch-video">
      <div>
        <a href="#" class="border-all"><span><%= t('.watch_video')%></span></a>
      </div>
    </div>
    <ul class="features">
      <li id="anonymity" class="feature-wrapper">
        <div class="feature-image"><%= image_tag 'feature-private.png', :width => "302", :height => "186"%></div>
        <h2><%= t('.private') %></h2>
        <p><%= t('.choose') %></p>
      </li>
      <li id="community" class="feature-wrapper">
        <div class="feature-image"><%= image_tag 'feature-engaging.png', :width => "287", :height => "188"%></div>
        <h2><%= t('.engaging') %></h2>
        <p><%= t('.share') %></p>
      </li>
      <li id="trustworthy" class="feature-wrapper last-feature">
        <div class="feature-image"><%= image_tag 'feature-positive.png', :width => "302", :height => "186"%></div>
        <h2><%= t('.positive') %></h2>
        <p><%= t('.offer') %></p>
      </li>
    </ul>
  </section>
  <div class="items-wrapper">
    <section class="topics">
      <h2><span class="line"></span><span><%= t('.popular_topics') %></span><span class="line"></span></h2>
      <ul class="items-frontpage topic-avatars">
        <%= render :partial => 'grouped_topic', :collection => @popular, :locals => {:leng => @popular.length} %>
      </ul>
    </section>

    <section class="feeds">
      <h2><span class="line"></span><span><%= t('.feeds') %></span><span class="line"></span></h2>
      <ul class="items-frontpage topic-avatars">
        <%= render :partial => 'grouped_topic', :collection => @latest, :locals => {:leng => @latest.length} %>
      </ul>
    </section>

    <br class="clear">
  </div>
</div>
<div class="overlay-wrapper rounded-border" id="watch-video-overlay">
  <div class="overlay">
    <div class="overlay-padding">
      <object width="780" height="520"><param name="movie" value="http://www.youtube.com/v/GWEt2zCV0sk?fs=1&amp;hl=en_US&amp;rel=0"></param><param name="allowFullScreen" value="true"></param><param name="allowscriptaccess" value="always"></param><param name="wmode" value="opaque"><embed src="http://www.youtube.com/v/GWEt2zCV0sk?fs=1&amp;hl=en_US&amp;rel=0" type="application/x-shockwave-flash" allowscriptaccess="always" allowfullscreen="true" width="780" height="520" wmode="transparent"></embed></object>
    </div>
  </div>
  <div class="close"></div>
</div>
