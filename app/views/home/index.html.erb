<% stylesheet 'index' %>
<% javascript 'include/jquery.overlay', 'index' %>

<div class="aligned">
  <section>
    <hgroup class="slogan">
      <h1><%= t('.title') %></h1>
      <h2><%= t('.legend') %></h2>
    </hgroup>
    <!-- Start New Header -->
    <div class="right video-player">

      <div class="preview-image">
        <a href="" title="Preview">
          <span><%= image_tag 'icn-play-video.png', :width => "20", :height => "25"%></span>
        </a>
      </div>
      <div class="preview-video">
        <iframe width="389" height="249" src="http://www.youtube.com/embed/GWEt2zCV0sk?wmode=opaque&rel=0" frameborder="0" allowfullscreen></iframe>
      </div>

    </div>
    <div class="left features-holder">
      <ul class="features">
        <li id="anonymity" class="feature-wrapper">
          <span class="feature-image"><%= image_tag 'feature-private.png', :width => "45", :height => "40"%></span>
          <h2><%= t('.private') %>&nbsp;&nbsp;<span><%= t('.choose') %></span></h2>
        </li>
        <li id="community" class="feature-wrapper">
          <span class="feature-image"><%= image_tag 'feature-engaging.png', :width => "45", :height => "40"%></span>
          <h2><%= t('.engaging') %>&nbsp;&nbsp;<span><%= t('.share') %></span></h2>
        </li>
        <li id="trustworthy" class="feature-wrapper last-feature">
          <span class="feature-image"><%= image_tag 'feature-positive.png', :width => "45", :height => "40"%></span>
          <h2><%= t('.positive') %>&nbsp;&nbsp;<span><%= t('.offer') %></span></h2>
        </li>
      </ul>
      <div class="gloabl-counter">
        <div class="members-count">
          <ul>
            <li class="first">1</li>
            <li>2</li>
            <li>6</li>
            <li class="last">8</li>
          </ul>
          <span>Caring Members</span>
        </div>
        <div class="topics-count">
          <ul>
            <li class="first">3</li>
            <li>4</li>
            <li class="last">6</li>
          </ul>
          <span>Intimate Topics</span>
        </div>
        <div class="advices-count">
          <ul>
            <li class="first">1</li>
            <li>5</li>
            <li>4</li>
            <li class="last">7</li>
          </ul>
          <span>Pieces of Advice</span>
        </div>
      </div>
    </div>
    <!-- End New Header -->
    
  </section>
  <div class="items-wrapper">
    <section class="topics">
      <h2><span class="line"></span><span><%= t('.popular_topics') %></span><span class="line"></span></h2>
      <ul class="items-frontpage topic-avatars">
        <%= render :partial => 'grouped_topic', :collection => @popular, :locals => {:leng => @popular.length} %>
      </ul>
    </section>

    <section class="feeds">
      <h2><span class="line"></span><span><%= t('.feeds') %></span><span class="line"></span></h2>
      <ul class="items-frontpage topic-avatars">
        <%= render :partial => 'grouped_topic', :collection => @latest, :locals => {:leng => @latest.length} %>
      </ul>
    </section>

    <br class="clear">
  </div>
</div>